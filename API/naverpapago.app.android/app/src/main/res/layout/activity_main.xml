<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/papaver1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/papaver2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/papaver3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.94"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/papahor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/papahor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.12"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/papahor3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/papahor4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/papahor1"
        app:layout_constraintBottom_toTopOf="@+id/papahor2"
        app:layout_constraintLeft_toRightOf="@+id/papaver1"
        app:layout_constraintRight_toLeftOf="@+id/papaver3"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="네이버 파파고 번역 API 샘플 앱"
         />
    <EditText
        android:id="@+id/et_target"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/papahor3"
        app:layout_constraintBottom_toTopOf="@+id/papahor4"
        app:layout_constraintLeft_toRightOf="@+id/papaver1"
        app:layout_constraintRight_toLeftOf="@+id/papaver2"

       />

    <Button
        android:id="@+id/btn_Translation"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/new_blue"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/papahor3"
        app:layout_constraintBottom_toTopOf="@+id/papahor4"
        app:layout_constraintLeft_toRightOf="@+id/papaver2"
        app:layout_constraintRight_toLeftOf="@+id/papaver3"
        android:text="번역" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/papahor4"
        app:layout_constraintRight_toLeftOf="@+id/papaver3"
        app:layout_constraintLeft_toRightOf="@+id/papaver1"
        android:text="결과"
        app:layout_constraintBottom_toBottomOf="parent"
         />
</androidx.constraintlayout.widget.ConstraintLayout>
